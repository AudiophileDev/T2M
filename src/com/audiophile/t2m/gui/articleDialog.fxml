<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label text="Choose an article" />
      <HBox spacing="5.0">
         <children>
            <TextField id="fileField" alignment="CENTER_RIGHT" editable="false" nodeOrientation="RIGHT_TO_LEFT" />
            <Button id="chooserBtn" mnemonicParsing="false" text="..." />
         </children>
      </HBox>
      <HBox alignment="CENTER_RIGHT" spacing="5.0">
         <children>
            <Button id="cancel" cancelButton="true" mnemonicParsing="false" text="Cancel" />
            <Button id="ok" disable="true" mnemonicParsing="false" text="Ok" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
